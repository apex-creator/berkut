 %%{
    let module = system.modules['/drivers/power/power'];
    let instance = module.$instances[0];
    let config = module.getInstanceConfig(instance);

    function ramRetentionMask()
    {
      let mask = config.ramRetentionMaskLPDS;
      if (mask.length == 0) {
          return 0;
      }
      return "PRCM_" +  mask.join("|PRCM_");
    }

    let pinParkDefs               = 'parkInfo';
    let parkPins                  = config.parkPins;
    let numParkedPins             = 0;

    let pinTable = ["AA","AB","AC","AD","AE","AF","AG","AH","AI","AJ","AK","AL","AM","AN","AO","AP","AQ","AR","AS","AT","AU","AV","AW","AX"];

    for (let i = 0; i < pinTable.length; ++i) {
      let istring = pinTable[i];
      let name = 'PAD_'+ istring;
      if (parkPins.hasOwnProperty(name)) {
          numParkedPins += 1;
          pinTable[i] = name;
      }
    }
%%}


