/*
 *  This structure defines the configuration for the Power Manager.
 */
const Power_ConfigV1 Power_config = {
    % for(let i = 0; i < module.$instances.length; i++) {
    % let instance = module.$instances[i];
    % let config = module.getInstanceConfig(instance);
    %if(config.policyInitFunction == "Custom"){
    .policyInitFxn             = `config.policyInitCustomFunction`,
    % } else{
    .policyInitFxn             = `config.policyInitFunction`,
    % }
    %if(config.policyFunction == "Custom"){
    .policyFxn                 = `config.policyCustomFunction`,
    % } else{
    .policyFxn                 = `config.policyFunction`,
    %}
    .enterLPDSHookFxn          = `config.enterLPDSHookFunction`,
    .resumeLPDSHookFxn         = `config.resumeLPDSHookFunction`,
    .enteridle3HookFxn          = `config.enteridle3HookFunction`,
    .resumeidle3HookFxn         = `config.resumeidle3HookFunction`,
    .enablePolicy                   = `config.enablePolicy`,
    .enableSleepCounterWakeupLPDS   = `config.enableSleepCounterWakeupLPDS`,
    .enableUARTWakeupLPDS           = `config.enableUartWakeupLPDS`,
    .enableSPICSWakeupLPDS          = `config.enableSpicsWakeupLPDS`,
    .enableRTCWakeupLPDS            = `config.enableRtcWakeupLPDS`,
    .enableFRCWakeupLPDS            = `config.enableFrcWakeupLPDS`,
    .enableGPIOSyncIOWakeupLPDS           = `config.enableGPIOSYNCINWakeupLPDS`,
    %if(config.enableGPIOSYNCINWakeupLPDS==true){
    .selectGpioSyncIOLpds          = `config.selectGpioSyncioLPDS`,
    %}
    %if(config.enableGpioSyncioLPDS=="GPIO"){
    .wakeupGPIOEdgeLPDS             = PRCM_LPDS_`config.wakeupGPIOEdgeLPDS`,
    %}else{
    .wakeupSyncIOEdgeLPDS           = PRCM_LPDS_`config.wakeupSYNCIOEdgeLPDS`,
    %}
    %if(config.enableSpicsWakeupLPDS){
    .wakeupSpiEdgeLPDS             = PRCM_LPDS_`config.wakeupSpiEdgeLPDS`,
    %}
    %if(config.enableUartWakeupLPDS){
    .wakeupUartEdgeLPDS             = PRCM_LPDS_`config.wakeupUartEdgeLPDS`,
    %}
    .LPDSThreshold                   = `config.thresholdForLPDS`,
    .totalLatencyForLPDS                 = `config.totalLatencyForLPDS`,
    .sleepThreshold                   = `config.thresholdForSleep`,
    .totalLatencyForSleep                 = `config.totalLatencyForSleep`,
    .idleThreshold                   = `config.thresholdForIdle`,
    .totalLatencyForIdle                 = `config.totalLatencyForIdle`,
    .ramRetentionMaskLPDS           = `ramRetentionMask()`,
    % if (numParkedPins > 0) {
    .pinParkDefs                    = `pinParkDefs`,
    % } else {
    .pinParkDefs                    = NULL,
    % }
    .numPins                        = `numParkedPins`
    % }
};

Power_ParkInfo parkInfo[] = {
